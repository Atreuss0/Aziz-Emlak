@model List<portfoy>
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/index.css">
@section heroo{
    <div class="heroo">
        <video autoplay loop muted>
            <source src="~/Media/movie/azizz.mp4" type="video/mp4">
        </video>
        <div class="heroo-content">
            <h2>KALİTE • GÜVEN • MEMNUNİYET </h2>
            <h2>ARADIĞINIZ GAYRİMENKUL BURADA !</h2>
        </div>
    </div>
}
<div class="container">
    <div class="help-container">
        <div class="help-baslik">
            <h1>HİZMETLERİMİZ</h1>
        </div>
        <div class="help-cards">

            <div class="help-card">
                <div class="help-card-link">
                    <div class="help-card-img">
                        <img src="~/Media/StaticImage/emlak.png" alt="">
                    </div>
                    <h2>Ev Alım/Satımları</h2>
                    <p>Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum</p>
                </div>
            </div>
            <div class="help-card">
                <div class="help-card-link">
                    <div class="help-card-img">
                        <img src="~/Media/StaticImage/agreement.png" alt="">
                    </div>
                    <h2>Arsa Alım/Satımları </h2>
                    <p>Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum</p>
                </div>
            </div>
            <div class="help-card">
                <div class="help-card-link">
                    <div class="help-card-img">
                        <img src="~/Media/StaticImage/sale.png" alt="">
                    </div>
                    <h2>Gayrümenkul Danışmanlığı</h2>
                    <p>Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum Ev satmak istiyorum</p>
                </div>
            </div>

        </div>

    </div>
    <div class="home-container">
        <div class="home-baslik">
            <h1>YENİ İLANLARIMIZ </h1>
        </div>       
        <div class="homes">
                       
            @foreach (var i in Model)
            {
                <div class="home-card">
                    <a href="~/Home/Portfoy/@i.id">
                        <img src="~/Media/img/@i.Image" alt="aziz emlak">
                        @if (i.Baslik.Length <= 55)
                        {
                            <h4>@i.Baslik</h4>
                        }
                        else
                        {
                            <h4>@i.Baslik.Substring(0,i.Baslik.Substring(0,55).LastIndexOf(" "))... </h4>
                        }
                        <h5>@i.Mahalle Mah./@i.Ilce</h5>
                        <div class="home-card-icons">
                            <i class="fa-solid fa-house"><span>@i.KonutTipi</span> </i>
                            <i class="fa-solid fa-couch"><span>@i.OdaSayısı</span></i>
                            <i class="fa-solid fa-layer-group"><span>@i.BulunduguKat .Kat</span></i>
                            <i class="fa-solid fa-square"><span>@i.Mburut m²</span></i>
                        </div>
                        <div class="home-card-date">
                            <h2>@i.Fiyati.ToString("c0")</h2>
                            <i class="fa-solid fa-calendar-days"><span>@(((DateTime)i.IlanTarihi).ToString("dd/MM/yyyy"))</span></i>
                        </div>
                    </a>
                </div>
            }        
        </div>
        <div class="all">
            <a href="~/Home/Portfoyler">Tüm İlanları Gör <i class="fa-solid fa-arrow-right-long"></i></a>
        </div>     
    </div>
    <div class="ilanver">
        <div class="ilanver-link">
            <h3>Hemen ücretsiz ilan verin,Kısa sürede alıcı bulun</h3>
            <a href="~/Home/Iletisim">Ücretsiz ilan verin</a>
        </div>
        <div class="ilanver-anlatım">
            <div class="ilanver-icon">
                <i class="fa-regular fa-pen-to-square"></i>
                <h4>Hemen ilan başvurunuzu yapın.</h4>
            </div>
            <i id="arrow" class="fa-solid fa-arrow-right-long"></i>
            <div class="ilanver-icon">
                <i class="fa-solid fa-user"></i>
                <h4>Danışmanlarımız başvurunuzu incelesin.</h4>
            </div>
            <i id="arrow" class="fa-solid fa-arrow-right-long"></i>
            <div class="ilanver-icon">
                <i class="fa-regular fa-circle-check"></i>
                <h4>İlanınıza anında geri dönüş yapılsın.</h4>
            </div>
        </div>

    </div>
</div>
